{
  "manifest_version": 2,
  "name": "FoxAuth Authenticator",
  "short_name": "FoxAuth",
  "homepage_url": "https://github.com/FoxAuth/FoxAuth/",
  "version": "0.1.0",
  "default_locale": "en",
  "description": "A Firefox authenticator that can autofill TOTP codes with Firefox Android support",
  "applications": {
    "gecko": {
      "id": "foxauth@foxauth",
      "strict_min_version": "57.0"
    }
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon.svg",
      "38": "icons/icon.svg"
    },
    "default_title": "FoxAuth",
    "default_popup": "popup/index.html"
  },
  "options_ui": {
    "page": "options/option.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "contextMenus"
  ],
  "optional_permissions": [
    "clipboardWrite",
    "https://*.dropboxapi.com/*"
  ],
  "content_security_policy": "script-src 'self'; font-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; connect-src https://*.dropboxapi.com; default-src 'none'"
}
