{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "short_name": "__MSG_extShortName__",
  "homepage_url": "https://github.com/FoxAuth/FoxAuth/",
  "version": "0.1.0",
  "default_locale": "en",
  "description": "__MSG_extDesc__",
  "applications": {
    "gecko": {
      "id": "foxauth@foxauth",
      "strict_min_version": "57.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "__MSG_extShortName__",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": [
      "scripts/backgroud.js"
    ]
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "identity",
    "contextMenus"
  ],
  "optional_permissions": [
    "clipboardWrite",
    "https://*.dropboxapi.com/*"
  ],
  "content_security_policy": "script-src 'self'; font-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; connect-src https://*.dropboxapi.com; default-src 'none'"
}
